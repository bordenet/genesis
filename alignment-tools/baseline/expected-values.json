{
  "_meta": {
    "description": "Canonical expected values for all Genesis-derived repos",
    "lastUpdated": "2026-02-01",
    "maintainer": "bordenet"
  },
  "jest.config.js": {
    "coverageThreshold.global.statements": 50,
    "coverageThreshold.global.branches": 40,
    "coverageThreshold.global.functions": 50,
    "coverageThreshold.global.lines": 50,
    "testEnvironment": "jsdom"
  },
  "package.json": {
    "scripts.test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "scripts.test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "scripts.lint": "eslint js/**/*.js",
    "type": "module"
  },
  "eslint.config.js": {
    "quotes": "single",
    "semi": true
  },
  ".github/workflows/ci.yml": {
    "nodeVersions": ["18", "20", "22"],
    "coverageUpload": true,
    "lintStep": true,
    "testStep": true
  },
  "coreFiles": {
    "required": [
      "index.html",
      "js/app.js",
      "js/storage.js",
      "js/ui.js",
      "js/workflow.js",
      "js/router.js",
      "js/views.js",
      "js/projects.js",
      "js/project-view.js",
      "js/types.js",
      "js/error-handler.js",
      "js/ai-mock.js",
      "js/same-llm-adversarial.js",
      "css/styles.css",
      "tests/storage.test.js",
      "tests/workflow.test.js",
      "tests/ui.test.js",
      "tests/router.test.js",
      "README.md",
      "LICENSE",
      "docs/CLAUDE.md"
    ]
  },
  "uxPatterns": {
    "tailwindVersion": "3.x",
    "darkModeSupport": true,
    "responsiveBreakpoints": ["sm", "md", "lg"],
    "fontSizeBase": "text-base",
    "primaryColor": "blue-600"
  },
  "namingConventions": {
    "jsModules": "camelCase",
    "cssClasses": "kebab-case",
    "testFiles": "*.test.js",
    "exportStyle": "named"
  }
}

