    "type": "git",
    "url": "https://github.com/{{GITHUB_USER}}/{{GITHUB_REPO}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{GITHUB_USER}}/{{GITHUB_REPO}}/issues"
  },
  "homepage": "{{GITHUB_PAGES_URL}}",
