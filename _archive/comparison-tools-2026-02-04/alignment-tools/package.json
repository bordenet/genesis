{
  "name": "genesis-alignment-tools",
  "version": "2.0.0",
  "description": "Comprehensive entropy and variance scanner for Genesis-derived repositories",
  "type": "module",
  "main": "cli.js",
  "bin": {
    "genesis-align": "./cli.js"
  },
  "scripts": {
    "scan": "node cli.js scan",
    "scan:report": "node cli.js scan --format json --output report.json",
    "scan:ci": "node cli.js scan --ci --threshold 15",
    "baseline:save": "node cli.js baseline save",
    "baseline:compare": "node cli.js scan --baseline",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "author": "Matt J Bordenet",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}

